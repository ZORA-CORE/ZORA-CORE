# ZORA CORE Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE SYSTEM CONFIGURATION
# =============================================================================
ZORA_ENV=development
ZORA_LOG_LEVEL=INFO
ZORA_DEBUG=false
ZORA_HOST=0.0.0.0
ZORA_PORT=8000

# Infinity Engine Settings
ZORA_INFINITY_MODE=true
ZORA_AUTO_HEAL=true
ZORA_SYNC_ALL_SYSTEMS=true
ZORA_ENGINE_ID=infinity-001

# AGI Trinity Settings
ZORA_TRINITY_MODE=true
ZORA_AGI_COORDINATION=true
CONNOR_ENABLED=true
LUMINA_ENABLED=true
ORACLE_ENABLED=true

# =============================================================================
# AI SERVICE API KEYS
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude Configuration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-opus-20240229

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Meta AI Configuration
META_AI_API_KEY=your_meta_ai_api_key_here

# DeepSeek Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_preferred_voice_id

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Perplexity Configuration
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_ORG=THEZORACORE

# GitLab Configuration
GITLAB_TOKEN=your_gitlab_token_here

# Replit Configuration
REPLIT_TOKEN=your_replit_token_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://zora:zora_secure_password_2024@localhost:5432/zora_core
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your_super_secret_key_here_change_this_in_production
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
SENTRY_DSN=your_sentry_dsn_here
LOG_FILE_PATH=logs/zora.log
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Discord Bot (optional)
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# Slack Integration (optional)
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEV_MODE=true
HOT_RELOAD=true
DEBUG_AGENTS=false
MOCK_AI_RESPONSES=false
TEST_MODE=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Uncomment and configure for production deployment
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# RATE_LIMIT_REQUESTS=1000
# RATE_LIMIT_WINDOW=3600

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
COMPOSE_PROJECT_NAME=zora-core
DOCKER_REGISTRY=your_registry_here
IMAGE_TAG=latest

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d
BACKUP_STORAGE_PATH=./backups

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_SYNC=true
FEATURE_AUTO_SCALING=false
FEATURE_EXPERIMENTAL_AGENTS=false
